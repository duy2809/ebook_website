<div class="d-flex">
  <div>
    <% if @book.image.attached? %>
      <%= image_tag @book.image, height: 350 %>
    <% end %>
  </div>
  <div class="ms-5 w-100">
    <h2>
      <%= @book.title %>
    </h2>
    <p>
      <strong>Author:</strong>
      <%= @book.author %>
    </p>
    <p>
      <strong>Detail:</strong>
      <%= @book.detail %>
    <p>

    <p><strong>Review list:</strong><p>
    <ul>
      <% @book.book_review.each do |book_review|%>
      <li><%= book_review.review %>
        (<i><%= book_review.user_id %></i>)</li>
      <% end %>
    </ul>

    <p><strong>Your review:</strong><p>
    <%= form_with(model: @book_review, local: true) do |form| %>
      <div class= "field form-group">
        <%= form.text_area :review, class: 'form-control', placeholder: 'Write your review here ... ' %>
        <%= form.hidden_field :book_id, :value => @book.id %>
      </div>
      <br/>
      <div class="actions">
        <%= form.submit "Submit", class: "btn btn-success" %>
      </div>
      <br/>
    <% end %>

    <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-primary" %>
    <%= link_to 'Back', books_path, class: "btn btn-secondary" %>
  </div>
</div>

