<%= link_to 'New Book', new_book_path, class: 'btn btn-success' %><br/><br/>

<div class="d-flex flex-wrap">
  <% @books.each do |book| %>
      <div class="card me-3 mb-3" style="width: 18rem;">
        <% if book.image.attached? %>
          <%= image_tag book.image, class: "card-img-top", height: 350 %>
        <% else %>
          <img src="https://upload.wikimedia.org/wikipedia/commons/a/ac/No_image_available.svg" class="card-img-top gray-100" alt="..."/>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= book.title %></h5>
          <p class="card-text"><%= book.author %></p>
          <%= link_to 'See more', book, class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-secondary' %>
          <%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </div>
      </div>
  <% end %>
